<core:View
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:l="sap.ui.layout"
		xmlns="sap.ui.commons"
		controllerName="sap.training.view.ResponsiveFlowLayout"
		xmlns:html="http://www.w3.org/1999/xhtml">
		
	<l:ResponsiveFlowLayout>
		<l:content>
			<l:ResponsiveFlowLayout>
				<l:layoutData>
					<l:ResponsiveFlowLayoutData minWidth="250"/>
				</l:layoutData>
				<l:content>
					<Label labelFor="myNameField" text="Name" width="100%"/>
					<TextField id="myNameField" value="Knecht" width="100%">
						<layoutData>
							<l:ResponsiveFlowLayoutData weight="2"/>
						</layoutData>
					</TextField>
				</l:content>
			</l:ResponsiveFlowLayout>
			<l:ResponsiveFlowLayout>
				<l:layoutData>
					<l:ResponsiveFlowLayoutData minWidth="250"/>
				</l:layoutData>
				<l:content>
					<Label labelFor="myFirstNameField" text="First Name" width="100%"/>
					<TextField id="myFirstNameField" value="Knecht" width="100%">
						<layoutData>
							<l:ResponsiveFlowLayoutData weight="2"/>
						</layoutData>
					</TextField>
				</l:content>
			</l:ResponsiveFlowLayout>
		</l:content>
	</l:ResponsiveFlowLayout>
</core:View>