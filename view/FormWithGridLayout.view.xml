<mvc:View xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.commons"
	controllerName="sap.training.view.FormWithGridLayout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
		<f:Form>
			<f:title>
			    <core:Title text="Address Data" />
			</f:title>
			<f:layout>
			    <f:GridLayout singleColumn="false"/>
			</f:layout>
			<f:formContainers>
			    <f:FormContainer>
			    	    <f:title>
			    	         <core:Title text="Person Data" />
			    	    </f:title>
			    	    <f:layoutData>
			    		    <f:GridContainerData halfGrid="true"/>
			    		 </f:layoutData>
			    		<f:formElements>
			    		    <f:FormElement>
			    		    		<f:label>
			    		    		    <Label text="Name"/>
		    		    		    </f:label> 
			    		    		<f:fields>
			    		    		    <TextField value="Christoph"/>
			    		    		    <TextField value="Knecht"/>
			    		    		 </f:fields> 
			    		    </f:FormElement>
			    		     <f:FormElement>
			    		    		<f:label>
			    		    		    <Label text="Date of Birth"/>
			    		            </f:label> 
			    		    		<f:fields>
			    		    		    <DatePicker yyyymmdd="19700101"/>
			    		    		 </f:fields>
			    		    </f:FormElement>
			    		</f:formElements>
			    </f:FormContainer>
 
			     <f:FormContainer>
			    	    <f:title>
			    	         <core:Title text="Company" />
			    	    </f:title>
			    	    <f:layoutData>
			    		    <f:GridContainerData halfGrid="true"/>
			    		 </f:layoutData>
			    		<f:formElements>
			    		    <f:FormElement>
		    		    		<f:label>
			    		    		<Label text="Name / Location">
			    		    		    <layoutData>
			    		    		            <f:GridElementData hCells="3"/>
			    		    		    </layoutData>
			    		    		</Label>
		    		    		</f:label> 
		    		    		<f:fields>
		    		    		    <TextField value="SAP SE">
			    		    		     <layoutData>
			    		    		        <f:GridElementData hCells="2"/>
			    		    		     </layoutData>
		    		    		     </TextField>   
		    		    		    <TextField value="69190 Walldorf">
		    		    		        <layoutData>
		    		    		             <f:GridElementData hCells="3"/>
		    		    		        </layoutData>
		    		    		     </TextField>
		    		    		 </f:fields> 
			    		    </f:FormElement>
			    		    <f:FormElement>
			    		    		<f:label><Label text="Phone"/></f:label> 
			    		    		<f:fields>
			    		    		    <TextField value="+49">
			    		    		        <layoutData>
			    		    		             <f:GridElementData hCells="1"/>
			    		    		        </layoutData>
			    		    		    </TextField>
			    		    		    <TextField value="6227">
			    		    		       <layoutData>
			    		    		             <f:GridElementData hCells="2"/>
			    		    		        </layoutData>
			    		    		     </TextField>
			    		    		     <TextField value="7-47474">
			    		    		      <layoutData>
			    		    		             <f:GridElementData hCells="2"/>
			    		    		        </layoutData>
			    		    		     </TextField>
			    		    		 </f:fields> 
			    		    </f:FormElement>
			    		</f:formElements>
			    </f:FormContainer>
			    
			</f:formContainers> 
	</f:Form>

</mvc:View>
