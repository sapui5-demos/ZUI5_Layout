<core:View
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:l="sap.ui.commons.layout"
		xmlns="sap.ui.commons"
		controllerName="sap.training.view.MatrixLayout"
		xmlns:html="http://www.w3.org/1999/xhtml">
		
	<l:MatrixLayout columns="2" id="myMatrixLayout" layoutFixed="true" width="300px">
		<l:rows>
			<l:MatrixLayoutRow>
				<l:cells>
					<l:MatrixLayoutCell>
						<l:content>
							<Label labelFor="myNameField" text="Name:"/>
						</l:content>
					</l:MatrixLayoutCell>
					<l:MatrixLayoutCell>
						<l:content>
							<TextField id="myNameField" value="Knecht"/>
						</l:content>
					</l:MatrixLayoutCell>
				</l:cells>
			</l:MatrixLayoutRow>
			<l:MatrixLayoutRow>
				<l:cells>
					<l:MatrixLayoutCell>
						<l:content>
							<Label labelFor="myFirstNameField" text="First Name:"/>
						</l:content>
					</l:MatrixLayoutCell>
					<l:MatrixLayoutCell>
						<l:content>
							<TextField id="myFirstNameField" value="Christoph"/>
						</l:content>
					</l:MatrixLayoutCell>
				</l:cells>
			</l:MatrixLayoutRow>
			<l:MatrixLayoutRow height="50px">
				<l:cells>
					<l:MatrixLayoutCell>
						<l:content>
							<Button text="Submit"/>
						</l:content>
					</l:MatrixLayoutCell>
				</l:cells>
			</l:MatrixLayoutRow>
		</l:rows>
	</l:MatrixLayout>
</core:View>