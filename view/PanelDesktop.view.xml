<mvc:View xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.commons.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.ui.commons"
	controllerName="sap.training.view.PanelDesktop"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Panel width="350px" showCollapseIcon="true">
			<title>
			    <core:Title text="Person Data" icon="sap-icon://employee"/>
			</title>
			<buttons>
			    <Button text="Save" icon="sap-icon://save" press="onSave"/>
			    <Button text="Cancel" icon="sap-icon://sys-cancel" press="onCancel"/>
			</buttons>
			<content>
			    <l:MatrixLayout>
			    		<l:rows>
			    		    <l:MatrixLayoutRow>
			    		    		<l:cells>
			    		    		    <l:MatrixLayoutCell>
			    		    		    		<l:content>
			    		    		    		    <Label text="Name"/>
			    		    		    		</l:content>
			    		    		    </l:MatrixLayoutCell>
			    		    		     <l:MatrixLayoutCell> 
			    		    		    		<l:content>
			    		    		    		    <TextField value="Knecht"/>
			    		    		    		</l:content>
			    		    		    </l:MatrixLayoutCell>
			    		    		</l:cells> 
			    		    </l:MatrixLayoutRow>
			    		    
			    		     <l:MatrixLayoutRow>
			    		    		<l:cells>
			    		    		    <l:MatrixLayoutCell>
			    		    		    		<l:content>
			    		    		    		    <Label text="First Name"/>
			    		    		    		</l:content>
			    		    		    </l:MatrixLayoutCell>
			    		    		     <l:MatrixLayoutCell>
			    		    		    		<l:content>
			    		    		    		    <TextField value="Christoph"/>
			    		    		    		</l:content>
			    		    		    </l:MatrixLayoutCell>
			    		    		</l:cells> 
			    		    </l:MatrixLayoutRow>
			    		</l:rows> 
			    </l:MatrixLayout>
			</content>
	</Panel>
	

</mvc:View>
